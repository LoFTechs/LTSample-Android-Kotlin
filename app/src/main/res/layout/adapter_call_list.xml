<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/fast_scroll_circle" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/call_type"
        android:layout_toEndOf="@id/profile_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/state_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/profile_image"
        android:src="@drawable/ic_call_out_24" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname"
        android:layout_alignTop="@+id/state_type"
        android:layout_alignBottom="@+id/state_type"
        android:layout_toStartOf="@+id/call_type"
        android:layout_toEndOf="@id/state_type"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="00:00"
        android:textColor="@color/text_light_gray" />


    <ImageView
        android:id="@+id/call_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_calls_green" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="62dp"
        android:background="@color/divider_gray"
        android:orientation="horizontal" />


</RelativeLayout>